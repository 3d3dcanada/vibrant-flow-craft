# 3D3D Canada - Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# =============================================================================
# SUPABASE CONFIGURATION (Required)
# =============================================================================
# Get these from: Supabase Dashboard → Settings → API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# =============================================================================
# QUOTE CONFIGURATION
# =============================================================================
# How long quotes remain valid (in days)
QUOTE_EXPIRATION_DAYS=7

# =============================================================================
# RATE LIMITING
# =============================================================================
# Maximum quote calculations per minute per IP
RATE_LIMIT_QUOTE_REQUESTS=100
RATE_LIMIT_QUOTE_WINDOW=60

# =============================================================================
# FRAUD DETECTION THRESHOLDS
# =============================================================================
# Points threshold for rapid accumulation detection
FRAUD_RAPID_ACCUMULATION_POINTS=500
# Time window for rapid accumulation (in hours)
FRAUD_RAPID_ACCUMULATION_HOURS=1
# Maximum recycling submissions per day
FRAUD_MAX_RECYCLING_DAILY=3
# Maximum social shares per day
FRAUD_MAX_SOCIAL_SHARES_DAILY=3

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Enable leaked password protection (set via Supabase Dashboard)
# Dashboard → Authentication → Policies → Enable "Leaked Password Protection"
# LEAKED_PASSWORD_PROTECTION=enabled

# =============================================================================
# OPTIONAL: EXTERNAL INTEGRATIONS (Phase 2)
# =============================================================================
# Stripe (for credit card payments)
# STRIPE_PUBLIC_KEY=pk_live_...
# STRIPE_SECRET_KEY=sk_live_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# BTCPay (for Bitcoin payments)
# BTCPAY_URL=https://your-btcpay-server.com
# BTCPAY_API_KEY=...

# Email (for notifications)
# RESEND_API_KEY=re_...
# SENDGRID_API_KEY=SG....
